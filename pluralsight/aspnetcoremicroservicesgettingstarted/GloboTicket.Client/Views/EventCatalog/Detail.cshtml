@model GloboTicket.Client.Models.Api.Event

<div>
    <div>@Model.CategoryName</div>
    <div>@Model.Name</div>
    <div>@Model.Artist</div>
    <div>@Model.Date.DateTime.ToShortDateString()</div>
    <div>@Model.Description</div>
    <div>@Model.Price</div>
</div>

<form asp-controller="ShoppingBasket" asp-action="AddLine">
    <label>QUANTITY:</label>
    <select>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
    </select>
    <input asp-for="Id" hidden>
    <input asp-for="Price" hidden>
    <button>PLACE ORDER</button>
</form>
